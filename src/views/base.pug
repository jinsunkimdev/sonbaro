doctype html
html(lang="ja")
    head 
        title #{pageTitle} | Sonbaro
        link(rel="stylesheet" href="https://unpkg.com/mvp.css@1.12/mvp.css")
    body
        header
            h1=pageTitle
            nav 
                ul 
                    li 
                        a(href="/") Home
                    if loggedIn
                        li
                            a(href="/logout") Logout
                        li 
                            p #{loggedInUser.name}
                    else
                        li
                            a(href="/join") Join
                        li 
                            a(href="/login") Login
        main 
            block content
    include partials/footer.pug